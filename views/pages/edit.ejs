<html>

<!-- ===========================Header=========================== -->
<head>
  <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=0.62">
  <title>Edit Profile - Journey</title>

  <link rel="stylesheet" type="text/css" href="/styles/headerFooter.css">
  <link rel="stylesheet" type="text/css" href="/styles/edit.css">


  <script src = "https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <script type = "text/javascript" src = "Api/placesApi.js"></script>
  <script type = "text/javascript" src = "Scripts/changeTab.js"></script>
  <!--<script type = "text/javascript" src = "Scripts/scrollScript.js"></script>-->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>

  <header id = "head">
    <% include ../partials/header %>
  </header>

  <section>
    <form class="editForm" action="/doedit" method = "POST">
      <div class="mContainer">

        <h1 id = "registerHead">Edit</h1>
        <p id = "registerInfo">Change any of the fields below to update your profile</p>
        <hr>

        <label for="first"><b>First Name</b></label>
        <input type="text" value="<%= user.name.first %>" name="first" required>

        <label for="last"><b>Last Name</b></label>
        <input type="text" value="<%= user.name.last %>" name="last" required>

        <label for="email"><b>Email</b></label>
        <input type="text" value="<%= user.email %>" name="email" required>

        <label for="psw"><b>Password</b></label>
        <input type="password" value="<%= user.login.password %>" name="psw" required>

        <!-- <label for="psw-repeat"><b>Repeat Password</b></label>
        <input type="password" placeholder="Repeat Password" name="psw-repeat" required> -->

        <label for="avatar"><b>Profile Image</b></label>

        <select id = "avatarselect" name = "avatar">
            <option value="Images/Bubble - Favourite.jpg">Profile 1</option>
            <option value="Images/Bubble - Log In.jpg">Profile 2</option>
            <option value="Images/Bubble - Search.jpg">Profile 3</option>
        </select>

      </div>
      <div class="mContainer" style="background-color:#f1f1f1">
        <button type="submit" id="loginButton">Edit</button>
      </div>
    </form>
  </section>


  <footer id = "footer"></footer>

  <!-- =========================Modal Login/Register Forms==================== -->
  <!-- The Login Modal -->
    <div id="id01" class="modal">
      <% include ../partials/login %>
    </div>

    <!-- Register Modal -->
    <div id="id02" class="modal">
      <% include ../partials/register %>
    </div>

    <!-- close modal if the user clicks outside the modal window -->
    <!-- script for modal id01 (login) -->
    <script>
    // Get the modal
    var modal = document.getElementById('id01');
    var modal2 = document.getElementById('id02');
    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
        if (event.target == modal2) {
            modal2.style.display = "none";
        }
    }
    </script>

  </body>

  </html>
